<% layout("/layouts/boilerplate") %>
<body>
    <div class="container mt-4">
        <div class="row">
            <!-- Listing Details Section -->
            <div class="col-lg-6 blockOne">
                <h1>Listing Details :</h1>
                <div class="card show-card" style="width: 100%;">
                    <img src="<%= listing.image %>" class="card-img-top show-img" alt="Listing Image" />
                    <div class="card-body">
                        <h5 class="card-title"><b><%= listing.title %></b></h5>
                        <p class="card-text">
                            <%= listing.description %>
                            <br>
                            <b>&#8377; <%= listing.price.toLocaleString("en-IN") %></b>
                            <br>
                            <%= listing.location %>, <%= listing.country %>
                        </p>
                        <div class="row">
                        <a href="/listings/<%= listing._id %>/edit" class="btn btn-warning col-5 m-2">Edit</a>
                        <a href="/listings/<%= listing._id %>?_method=DELETE" class="btn btn-warning col-5 m-2">Delete</a>
                    </div>
                      </div>
                </div>
            </div>
            <div class="col-lg-6 d-flex flex-column align-items-center newBlock">
                <h2 class="heading">Host & Lodge Details:</h2>
                <hr>
                <img src="/images/profile (1).jpg" class="rounded-circle" width="300px" height="300px" alt="Host Image">
                <ul type="circle">
                  <li class="hostList"><b>Host Name:</b> <%= listing.hostName %></li>
                  <li class="hostList"><b>Contact:</b> <%= listing.hostContact %></li>
                  <li class="hostList"><b>House Type:</b> <%= listing.houseType %></li>
                  <li class="hostList"><b>Stars & Reviews:</b> &#9734; <%= listing.starCount %>(<%= listing.reviewsCount %>)</li>
                  <li class="hostList"><b>Likes:</b>&#10084 <%= listing.likes%></li>
                  <li class="hostList"><b>Facilities:</b> <%= listing.facilities.toString() %></li>
                </ul>
                <a href="#" class="btn btn-warning col-12"><b>Reserve Place -></b></a>
                <br><br>
            </div>
        </div>
    </div>
                <div class="overlay" id="popupOverlay">
    <div class="popup">
        <span class="close-btn" id="closePopup">&times;</span>
        <h2 id="popupTitle"></h2>
        <p id="popupMessage"></p>
        
        <div id="passwordSection">
            <label for="password">Enter Password:</label>
            <input type="password" id="password" class="form-control">
            <br>
            <button id="confirmAction" class="btn btn-warning">Submit</button>
        </div>

        <button id="okButton" class="btn btn-success" style="display: none;">OK</button>
    </div>
</div>
    <br><br><br>
</body>